pipeline {
    agent any

    environment {
        // Secure credentials stored in Jenkins (assumes a credential with ID 'mlip_app_secret')
        SECRET_KEY = credentials('mlip_app_secret')
    }

    stages {
        stage('Checkout') {
            steps {
                checkout scm
            }
        }
        stage('Install Dependencies') {
            steps {
                sh 'pip install -r requirements.txt'
            }
        }
        stage('Run Tests') {
            steps {
                sh 'pytest'
            }
        }
        stage('Build Docker Image') {
            steps {
                sh 'docker build -t mlip_app:latest -f docker/Dockerfile .'
            }
        }
        stage('Deploy') {
            steps {
                // For demo purposes, simulate deployment by running the container.
                sh 'docker run -d -p 5000:5000 mlip_app:latest'
            }
        }
    }
    post {
        always {
            echo "CI/CD Pipeline finished."
        }
    }
}
